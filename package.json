{
  "name": "booking",
  "private": true,
  "scripts": {
    "postinstall": "node scripts/copy-env.js web && node scripts/copy-env.js backend && pnpm --filter backend run generate:jwt-secret ",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "generate:jwt-secret": "node ./apps/backend/generate-jwt-secret.js",
    "generate:jwt-secret-test": "node ./apps/backend/generate-jwt-secret-test.js",
    "test": "pnpm test --filter=backend",
    "test:e2e": "pnpm --filter backend run test:e2e",
    "test:e2e-full": "pnpm --filter backend run test:e2e-full",
    "launch": "pnpm --filter backend generate:prisma-client && pnpm dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "studio:test": "NODE_ENV=test pnpm --filter backend run studio:test"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.6.0",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
