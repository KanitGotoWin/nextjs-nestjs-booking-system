generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum BookingStatus {
  pending
  approve
  cancel
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String?
  createdAt DateTime @default(now())
}

model Booking {
  id        Int           @id @default(autoincrement())
  name      String
  email     String
  status    BookingStatus @default(pending)
  note      String?
  createdAt DateTime      @default(now())
  updatedAt DateTime?
}

model BookingConfig {
  id    Int    @id @default(autoincrement())
  key   String
  value String
}
